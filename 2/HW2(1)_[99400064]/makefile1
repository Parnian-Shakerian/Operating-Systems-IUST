CC = gcc
CFLAGS = -pthread -Wall -Wextra -pedantic -std=c11

all: number1

number1: number1.o
	$(CC) $(CFLAGS) -o number1 number1.o

number1.o: number1.c
	$(CC) $(CFLAGS) -c number1.c

clean:
	rm -f *.o number1
# navigate to directory containing makefile1, run the make command to compile.
# This will create a file named number1 in the same directory.
